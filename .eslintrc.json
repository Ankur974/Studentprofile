{
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.test.jsx", "**/*.setup.js"],
      "env": { "jest": true }
    }
  ],
  "rules": {
    "indent": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "react/react-in-jsx-scope": "off",
    "block-spacing": ["error", "always"],
    "react/prop-types": "off",
    "react/no-unknown-property": "off"
  }
}
